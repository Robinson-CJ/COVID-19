{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    // 开启 typescript 智能感知
    "jsx": "preserve",
    "paths": {
      // 为 src/ 目录路径起别名为 @/，方便后续导入模块
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  }
}